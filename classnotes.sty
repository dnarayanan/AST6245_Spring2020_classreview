\end{titlepage}
\def\thanks##1{}
\@checkargs}
\else
\def\maketitle{%
	\begingroup
	\def\thefootnote{\fnsymbol{footnote}}%
	\def\@makefnmark{\hbox
       to3pt{$\m@th^{\@thefnmark}$\hss}}%
	\if@twocolumn
		\twocolumn[\@maketitle]%
	\else \newpage
		\global\@topnum\z@
		\@maketitle 
