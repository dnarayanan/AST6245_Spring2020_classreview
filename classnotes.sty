\thepage%
\vadjust{\simplerule}}

\let\@evenhead\@oddhead

\newcommand{\simplerule}{\kern 2\p@
\hrule width \columnwidth}

\ifthenelse{\boolean{timestamp}}
{\renewcommand{\@oddfoot}{\reset@font\small
\hfill v.~\@timestamp\hfill}
\let\@evenfoot\@oddfoot
}
